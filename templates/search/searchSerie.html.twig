                            <a href="{{ path('serie_details', {'id': serie.id}) }}" style="text-decoration:none">
                                {{serie.name}}
                            </a>
                            <p>{{ serie.overview }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
