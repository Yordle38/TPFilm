{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

                    <img src= "{{ movie.image }}" alt="image de {{movie.title}}" style="max-width:40%;">  {{ movie.title }}
                    {{ movie.synopsis }}
                    {{ movie.language }}
                    {{ movie.releaseDate|date('Y-m-d') }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                        </svg>{{ movie.note }}
                    {{ movie.video }}
                    
                        {% if movie.forAdult %}
                            <img class="w-100" src="https://ih1.redbubble.net/image.2177519525.9192/st,small,507x507-pad,600x600,f8f8f8.jpg" alt="For Adults" style="max-width:20%;">
                        {% else %}
                            <img class="w-100" src="https://pegi.info/sites/default/files/inline-images/age-7-black.jpg" alt="For Adults" class="w-100">
                        {% endif %}
                    
                    
                    {% for actor in movie.actors %}
                        {{ actor.name }},
                    {% endfor %}
                    <div class="commentaire">
                    <h1>COMMENTAIRES</h1>
                    <h2>Ajouter un commentaire</h2>

                  {{ form_start(form) }}
                         {{ form_widget(form) }}
                    {{ form_end(form) }}

                    <h2>Liste des commentaires</h2>
                    {% for comment in comments %}
                        Note: {{comment.note}} <br>
                        Content : {{comment.comment}} <br>
                    {% endfor %}
                    </div>

                    
               


</div>
{% endblock %}
