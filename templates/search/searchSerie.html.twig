{% block body %}
    <h1 class="text-center m-5 text-white">Résultats de la recherche pour "<span class="text-danger">{{ searchTerm }}</span>"</h1>
    {% if searchResults.results > 0 %}
        <div class="container mt-4">
            <div class="row">
                {% for serie in searchResults.results %}
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="https://image.tmdb.org/t/p/original{{ serie.poster_path }}" alt="{{ serie.name }}">
                            <div class="card-title-overlay">
                                <h5 class="card-title">{{ serie.name }}</h5>
                                <p>{{ serie.overview }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <p>Aucun résultat trouvé pour "{{ searchTerm }}".</p>
    {% endif %}
    <a href="#">Retour à la page d'accueil</a>
{% endblock %}
